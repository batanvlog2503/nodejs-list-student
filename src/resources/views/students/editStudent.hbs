<div class="mt-4 container">
  <h3>Sửa Sinh Viên {{student.name}}</h3>

  <form method="POST" action="/students/{{student._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Name</label>
      <input
        type="text"
        value="{{student.name}}"
        class="form-control"
        id="name"
        name="name"
        required
      />
    </div>
    <div class="form-group">
      <label for="msv">MSV</label>
      <input
        type="text"
        value="{{student.msv}}"
        class="form-control"
        id="msv"
        name="msv"
        required
      />
    </div>
    <div class="form-group">
      <label for="class">class</label>
      <input
        type="text"
        value="{{student.class}}"
        class="form-control"
        id="class"
        name="class"
        required
      />
    </div>
    <div class="form-group">
      <label for="hometown">Hometown</label>
      <input
        type="text"
        value="{{student.hometown}}"
        class="form-control"
        id="hometown"
        name="hometown"
        required
      />
    </div>
    <div class="form-group">
      <label for="address">address</label>
      <input
        type="text"
        value="{{student.address}}"
        class="form-control"
        id="address"
        name="address"
        required
      />
    </div>
    <div class="form-group">
      <label for="department">department</label>
      <input
        type="text"
        value="{{student.department}}"
        class="form-control"
        id="department"
        name="department"
        required
      />
    </div>

    <div class="form-group">
      <label for="gpa">gpa</label>
      <input
        type="text"
        value="{{student.gpa}}"
        class="form-control"
        id="gpa"
        name="gpa"
        required
      />
    </div>
    <button type="submit" class="btn btn-primary">Lưu Lại</button>
  </form>
</div>